<div class="container mt-4" style="min-height: 700px;">
    <div class="row">
        <div class="col-md-12 mt-2">
            <h4>Update Documents</h4>
            <form action="" method="post" enctype="multipart/form-data">
            <div class="card mt-5">
                <div class="card-body">
                    <div class="form-group">
                        <label>File Name</label>
                        <input type="text" name="name" value="<%= result.name %>" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>File Type</label>
                        <select name="type" class="form-control">
                            <option>Select</option>
                            <option value="doc" <% if(result.type == 'doc'){ %> selected  <% } %>>DOC</option>
                            <option value="ppt" <% if(result.type == 'ppt'){ %> selected  <% } %>>PPT</option>
                            <option value="pdf" <% if(result.type == 'pdf'){ %> selected  <% } %>>PDF</option>
                            <option value="images" <% if(result.type == 'images'){ %> selected  <% } %>>Images</option>
                            <option value="other" <% if(result.type == 'other'){ %> selected  <% } %>>Other</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Current File</label>
                        <br />
                        <a href="#">Download</a>
                    </div>

                    <div class="form-group">
                        <label>Select File</label>
                        <input type="file" name="file" class="form-control"/>
                        <p class="text-danger">
                            <%= message %>
                        </p>
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Upload" class="btn btn-primary" />
                </div>
            </div>
            </form>

        </div>
    </div>
   
</div>


